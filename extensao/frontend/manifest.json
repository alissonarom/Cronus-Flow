{
  "manifest_version": 3,
  "name": "Cronus Flow",
  "version": "0.1.0",
  "description": "Mentor de vendas para WhatsApp Web",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Cronus Flow"
  }
}
